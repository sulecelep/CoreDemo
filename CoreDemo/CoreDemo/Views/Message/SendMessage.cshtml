@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h2>Mesaj Gönderme Paneli</h2>
<br />
@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{

    <div class="form-group">
        <label for="ReceiverID">Alıcı Seçimi</label>
        @Html.DropDownListFor(x=>x.ReceiverID, (List<SelectListItem>)ViewBag.v1, new{@class="form-control"})
    </div>

    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x=>x.Subject, new {@class="form-control"})
    <br />

    @Html.Label("Mesaj İçeriği")
    @Html.TextAreaFor(x=>x.MessageDetails,10,3, new {@class="form-control"})
    <br />
    <button class="btn btn-info">Mesajı Gönder</button>
}




